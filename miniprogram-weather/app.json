{
  "pages": [
    "pages/home/home",
    "pages/message/message",
    "pages/contact/contact"
  ],
  "preloadRule": {
    "pages/contact/contact": {
      "packages": ["pkgA"],
      "network": "all"
    }
  },
  "subpackages": [
    {
      "root": "pkgA",
      "name": "p1",
      "pages": [
        "pages/cat/cat",
        "pages/dog/dog"
      ]
    },
    {
      "root": "pkgB",
      "name": "p2",
      "pages": [
        "pages/apple/apple"
      ],
      "independent": true
    }
  ],
  "window": {
    "navigationBarTextStyle": "white",
    "navigationBarTitleText": "本地生活",
    "navigationBarBackgroundColor":"#2b4b6b",
    "onReachBottomDistance": 50
  },
  "tabBar": {
    "list":[
      {
        "pagePath": "pages/home/home",
        "text": "首页",
        "iconPath": "/images/index.png",
        "selectedIconPath": "/images/index-active.png"
      },
      {
        "pagePath": "pages/message/message",
        "text": "消息",
        "iconPath": "/images/list.png",
        "selectedIconPath": "/images/list-active.png"
      },
      {
        "pagePath": "pages/contact/contact",
        "text": "联系我们",
        "iconPath": "/images/page.png",
        "selectedIconPath": "/images/page-active.png"
      }
    ]
  },
  "componentFramework": "glass-easel",
  "sitemapLocation": "sitemap.json",
  "lazyCodeLoading": "requiredComponents",
  "usingComponents": {
    "van-button": "miniprogram_npm/@vant/weapp/button",
    "my-numbers": "/components/numbers/numbers"
  }
}
